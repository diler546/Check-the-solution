<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Итого решено примеров"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/textView"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>


    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear"
        android:columnCount="2"
        android:rowCount="2">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Правильно"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Неправильно"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
    </GridLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ВРЕМЯ (сек)"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/grid"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

    <GridLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textView20"
        >
        <TextView
            android:id="@+id/textView21"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Минимум"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/grid"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Максимум"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/grid"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Среднее"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/grid"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/linear2"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/linear2"
            android:textAlignment="center"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/linear2"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            />

    </GridLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.00%"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/linear2"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        />



    <LinearLayout
        android:id="@+id/primer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/textView6">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="35sp"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            android:textAlignment="center"
            android:layout_marginLeft="20sp"
            />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="35sp"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            android:textAlignment="center"
            android:layout_marginLeft="60sp"
            />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="35sp"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            android:textAlignment="center"
            android:layout_marginLeft="60sp"
            />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="35sp"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            android:textAlignment="center"
            android:layout_marginLeft="40sp"
            />

        <TextView
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="35sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:text="00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/primer"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/button1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="ВЕРНО"
            app:layout_constraintTop_toBottomOf="@id/primer"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="НЕВЕРНО"
            app:layout_constraintTop_toBottomOf="@id/primer"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="СТАРТ"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>